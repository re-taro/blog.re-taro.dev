{
	"name": "blog.re-taro.dev",
	"type": "module",
	"version": "1.1.2",
	"private": true,
	"packageManager": "pnpm@9.1.2",
	"description": "My personal tech blog",
	"author": "Rintaro Itokawa <me@re-taro.dev> (https://re-taro.dev)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/re-taro/blog.re-taro.dev"
	},
	"sideEffects": false,
	"scripts": {
		"build": "qwik build",
		"build-storybook": "storybook build",
		"build.client": "vite build",
		"build.preview": "vite build --ssr src/entry.preview.tsx",
		"build.server": "vite build -c adapters/static/vite.config.ts",
		"dev": "vite --mode ssr",
		"fmt": "run-s -c fmt:*",
		"fmt:eslint": "pnpm run lint:eslint --fix",
		"gen": "plop",
		"lint": "run-p -c lint:*",
		"lint:eslint": "eslint .",
		"lint:tsc": "tsc -p . --incremental --noEmit",
		"prebuild.pandacss": "panda codegen --silent",
		"prebuild.content-collections": "content-collections build",
		"prepare": "panda codegen",
		"preview": "qwik build preview && vite preview --open",
		"qwik": "qwik",
		"start": "NODE_ENV=production wrangler pages dev dist",
		"storybook": "storybook dev -p 6006",
		"test": "run-p -c test:*",
		"test:integration": "playwright test",
		"test:storybook": "test-storybook",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@axe-core/playwright": "4.9.0",
		"@builder.io/partytown": "0.10.2",
		"@builder.io/qwik": "1.5.5",
		"@builder.io/qwik-city": "1.5.5",
		"@builder.io/vite-plugin-macro": "~0.0.7",
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.3",
		"@chromatic-com/storybook": "1.4.0",
		"@content-collections/cli": "0.1.2",
		"@content-collections/core": "0.5.0",
		"@content-collections/vite": "0.2.1",
		"@pandacss/dev": "0.39.1",
		"@playwright/test": "1.44.0",
		"@qnighy/dedent": "0.1.1",
		"@re-taro/eslint-config": "4.1.0",
		"@shikijs/transformers": "1.6.0",
		"@storybook/addon-a11y": "8.1.3",
		"@storybook/addon-actions": "8.1.3",
		"@storybook/addon-backgrounds": "8.1.3",
		"@storybook/addon-essentials": "8.1.2",
		"@storybook/addon-interactions": "8.1.2",
		"@storybook/addon-links": "8.1.2",
		"@storybook/blocks": "8.1.1",
		"@storybook/builder-vite": "8.1.1",
		"@storybook/html": "8.1.1",
		"@storybook/html-vite": "8.1.1",
		"@storybook/test": "8.1.2",
		"@storybook/test-runner": "0.18.1",
		"@types/hast": "3.0.4",
		"@types/mdast": "4.0.4",
		"@types/node": "20.12.12",
		"@types/unist": "3.0.2",
		"@types/xml2js": "0.4.14",
		"axe-core": "4.9.1",
		"axe-playwright": "2.0.1",
		"concurrently": "8.2.2",
		"eslint": "8.57.0",
		"eslint-plugin-format": "0.1.1",
		"eslint-plugin-qwik": "1.5.4",
		"github-slugger": "2.0.0",
		"hast-util-from-html": "2.0.1",
		"hast-util-select": "6.0.2",
		"hast-util-to-html": "9.0.1",
		"isomorphic-dompurify": "2.10.0",
		"mdast-util-from-markdown": "2.0.0",
		"npm-run-all2": "6.2.0",
		"playwright": "1.44.0",
		"plop": "4.0.1",
		"postcss": "8.4.38",
		"remark-gfm": "4.0.0",
		"remark-parse": "11.0.0",
		"remark-retext": "6.0.0",
		"retext-english": "5.0.0",
		"retext-equality": "7.1.0",
		"retext-stringify": "4.0.0",
		"schema-dts": "1.1.2",
		"sharp": "0.33.4",
		"shiki": "1.6.0",
		"sirv-cli": "2.0.2",
		"storybook": "^8.1.1",
		"storybook-framework-qwik": "0.4.0",
		"temporal-polyfill": "0.2.4",
		"ts-array-length": "0.1.2",
		"ts-pattern": "5.1.1",
		"typescript": "5.4.5",
		"ulid": "2.3.0",
		"unfurl.js": "6.4.0",
		"unified": "11.0.4",
		"unist-util-visit": "5.0.0",
		"vite": "5.2.11",
		"vite-tsconfig-paths": "4.3.2",
		"vitest": "1.6.0",
		"wait-on": "7.2.0",
		"wrangler": "3.57.0",
		"xml2js": "0.6.2"
	},
	"browserslist": [
		"defaults and > 0.3%"
	]
}

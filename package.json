{
	"name": "blog.re-taro.dev",
	"type": "module",
	"version": "1.6.0",
	"private": true,
	"packageManager": "pnpm@9.6.0",
	"description": "My personal tech blog",
	"author": "Rintaro Itokawa <me@re-taro.dev> (https://re-taro.dev)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/re-taro/blog.re-taro.dev"
	},
	"scripts": {
		"build": "vinxi build",
		"dev": "vinxi dev",
		"fmt": "pnpm run /^fmt:.*/",
		"fmt:eslint": "pnpm run lint:eslint --fix",
		"fmt:textlint": "pnpm run lint:textlint --fix",
		"gen": "plop",
		"lint": "pnpm run --parallel /^lint:.*/",
		"lint:eslint": "eslint .",
		"lint:tsc": "tsc -p . --incremental --noEmit",
		"lint:textlint": "textlint contents/**/slug.md",
		"prebuild": "pnpm run /^prebuild:.*/",
		"prebuild:pandacss": "panda codegen --silent",
		"prebuild:content-collections": "content-collections build",
		"prepare": "panda codegen",
		"start": "NODE_ENV=production wrangler pages dev dist",
		"test": "pnpm run --parallel /^test:.*/",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@solidjs/meta": "0.29.4",
		"@solidjs/router": "0.14.1",
		"@solidjs/start": "1.0.2",
		"dompurify": "3.1.6",
		"shiki": "1.12.1",
		"solid-js": "1.8.19",
		"temporal-polyfill": "0.2.5",
		"xml2js": "0.6.2"
	},
	"devDependencies": {
		"@axe-core/playwright": "4.9.1",
		"@builder.io/partytown": "0.10.2",
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.7",
		"@content-collections/cli": "0.1.2",
		"@content-collections/core": "0.6.0",
		"@content-collections/vite": "0.2.1",
		"@pandacss/dev": "0.41.0",
		"@playwright/test": "1.45.3",
		"@qnighy/dedent": "0.1.1",
		"@re-taro/eslint-config": "4.1.0",
		"@shikijs/transformers": "1.12.1",
		"@types/dompurify": "3.0.5",
		"@types/hast": "3.0.4",
		"@types/mdast": "4.0.4",
		"@types/node": "20.14.14",
		"@types/unist": "3.0.2",
		"@types/xml2js": "0.4.14",
		"axe-core": "4.10.0",
		"axe-playwright": "2.0.1",
		"concurrently": "8.2.2",
		"eslint": "8.57.0",
		"eslint-plugin-format": "0.1.2",
		"github-slugger": "2.0.0",
		"hast-util-from-html": "2.0.1",
		"hast-util-select": "6.0.2",
		"hast-util-to-html": "9.0.1",
		"mdast-util-from-markdown": "2.0.1",
		"playwright": "1.45.3",
		"plop": "4.0.1",
		"postcss": "8.4.40",
		"remark-gfm": "4.0.0",
		"remark-parse": "11.0.0",
		"remark-retext": "6.0.0",
		"retext-english": "5.0.0",
		"retext-equality": "7.1.0",
		"retext-stringify": "4.0.0",
		"schema-dts": "1.1.2",
		"sharp": "0.33.4",
		"sirv-cli": "2.0.2",
		"textlint": "14.0.4",
		"textlint-filter-rule-comments": "1.2.2",
		"textlint-rule-ja-space-around-link": "2.4.2",
		"textlint-rule-preset-overflow-techblog": "0.0.2",
		"ts-array-length": "0.1.3",
		"ts-pattern": "5.2.0",
		"typescript": "5.5.4",
		"ulid": "2.3.0",
		"unfurl.js": "6.4.0",
		"unified": "11.0.5",
		"unist-util-visit": "5.0.0",
		"vinxi": "0.3.14",
		"vite-tsconfig-paths": "4.3.2",
		"vitest": "2.0.5",
		"wait-on": "7.2.0",
		"wrangler": "3.68.0"
	},
	"browserslist": [
		"defaults and > 0.3%"
	]
}

{
	"name": "blog.re-taro.dev",
	"type": "module",
	"version": "0.0.0",
	"private": true,
	"packageManager": "pnpm@9.0.6",
	"description": "My personal tech blog",
	"author": "Rintaro Itokawa <me@re-taro.dev> (https://re-taro.dev)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/re-taro/blog.re-taro.dev"
	},
	"sideEffects": false,
	"scripts": {
		"build": "qwik build",
		"build-storybook": "storybook build",
		"build.client": "vite build",
		"build.preview": "vite build --ssr src/entry.preview.tsx",
		"build.server": "vite build -c adapters/static/vite.config.ts",
		"dev": "vite --mode ssr",
		"fmt": "run-s -c fmt:*",
		"fmt:eslint": "pnpm run lint:eslint --fix",
		"gen": "plop",
		"lint": "run-p -c lint:*",
		"lint:eslint": "eslint .",
		"lint:tsc": "tsc -p . --incremental --noEmit",
		"prebuild.pandacss": "panda codegen --silent",
		"prepare": "panda codegen",
		"preview": "qwik build preview && vite preview --open",
		"qwik": "qwik",
		"start": "NODE_ENV=production wrangler pages dev dist",
		"storybook": "storybook dev -p 6006",
		"test": "run-p -c test:*",
		"test:integration": "playwright test",
		"test:storybook": "test-storybook"
	},
	"devDependencies": {
		"@axe-core/playwright": "4.9.0",
		"@builder.io/partytown": "0.10.2",
		"@builder.io/qwik": "1.5.2",
		"@builder.io/qwik-city": "1.5.2",
		"@builder.io/vite-plugin-macro": "~0.0.7",
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.1",
		"@chromatic-com/storybook": "1.3.3",
		"@pandacss/dev": "0.37.2",
		"@playwright/test": "1.43.1",
		"@re-taro/eslint-config": "4.1.0",
		"@storybook/addon-a11y": "8.0.9",
		"@storybook/addon-actions": "8.0.9",
		"@storybook/addon-backgrounds": "8.0.9",
		"@storybook/addon-essentials": "8.0.9",
		"@storybook/addon-interactions": "8.0.9",
		"@storybook/addon-links": "8.0.9",
		"@storybook/blocks": "8.0.9",
		"@storybook/builder-vite": "8.0.9",
		"@storybook/html": "8.0.9",
		"@storybook/html-vite": "8.0.9",
		"@storybook/test": "8.0.9",
		"@storybook/test-runner": "0.17.0",
		"@types/node": "20.12.7",
		"axe-playwright": "2.0.1",
		"concurrently": "8.2.2",
		"eslint": "8.57.0",
		"eslint-plugin-format": "0.1.1",
		"eslint-plugin-qwik": "1.5.2",
		"npm-run-all2": "6.1.2",
		"playwright": "1.43.1",
		"plop": "4.0.1",
		"postcss": "8.4.38",
		"sirv-cli": "2.0.2",
		"storybook": "^8.0.9",
		"storybook-framework-qwik": "0.4.0",
		"typescript": "5.4.5",
		"vite": "5.2.10",
		"vite-tsconfig-paths": "4.3.2",
		"wait-on": "7.2.0",
		"wrangler": "3.52.0"
	},
	"browserslist": [
		"defaults and > 0.3%"
	]
}
